import java.util.*;
public class pn{
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        int x = sc.nextInt();
        int y = sc.nextInt();
        int sum =0;
       
         
        for(int i=x;i<=y;i++){
              sum=sum+i;
        }
        System.out.println(sum);

        sc.close();
        


        
    }
}
