using loops  (time complexity o(n))
import java.util.*;
public class pn{
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        int n = sc.nextInt();
        int sum =0;
         
        for(int i=1;i<=n;i++){
              sum=sum+i;
        }
        System.out.println(sum);
        


        
    }
}
without using loops (time complexity o(n))
  import java.util.*;
public class pn{
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        int n = sc.nextInt();
        
        System.out.println(n*(n+1)/2);
        


        
    }
}
